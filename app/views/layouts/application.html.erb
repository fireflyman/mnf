<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Mini Forum</title>
  <%= stylesheet_link_tag 'main' %>
</head>
<body >
<div id='body'>
  <div class="roubox">
  <div class="routop"><div></div></div>
    <div class="roucontent">
      <!-- Header -->
  	  <div id='header'>
        <div id='head'><span></span></div>
        <div id="navbar">
          <ul>

            <li class="but"><span><a href="#"><strong>新闻</strong></a></span></li>
            <li class="but"><span><a href="#"><strong>产品展示</strong></a></span></li>
            <li class="but"><span><%= link_to '搜索', :controller => 'search',:action => 'index'%></span></li>

            <li class="but"><span><%= link_to '论坛', forums_path %></span></li>
            <li class="but"><span><%= link_to '留言', teams_path %></span></li>
            <li class="but"><span><%= link_to '关于', about_path %></span></li>

          </ul>
        </div>
  	  </div>
      <!-- Content -->
      <div id='content'>
        <p style="color: green"><%= flash[:notice] %></p>
        <%= yield  %>
      </div>
    </div>
   <div class="roubottom"><div></div></div>
  </div>
</div>
